<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewHandler"
            type="com.io.app.shakomako.helper.callback.ViewClickCallback" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/_20sdp"
            android:scaleType="centerInside"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_intro"
            style="@style/Widget.ShakoMako.Text.Title.Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:autoLink="web"
            android:gravity="start"
            android:linksClickable="true"
            android:onClick="onClick"
            android:padding="@dimen/_5sdp"
            android:text="@string/privacy_policy_cont" />

        <TextView
            android:id="@+id/tv_agree"
            style="@style/Widget.ShakoMako.Text.Title.Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:linksClickable="true"
            android:onClick="onClick"
            android:padding="@dimen/_5sdp"
            android:text="@string/agree_and_cont"
            android:textColor="@color/colorBlueSky" />


    </LinearLayout>


</layout>
